{
	"name": "cusodede/yii2-opentracing",
	"description": "OpenTracing implementation",
	"type": "yii2-extension",
	"keywords": [
		"yii2",
		"extension",
		"opentracing"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Alexey Lapin"
		},
		{
			"name": "Pavel Dubrovsky"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.0",
		"opentracing/opentracing": "^1.0.0",
		"yiisoft/yii2": "~2.0.0",
		"yiisoft/yii2-httpclient": "^2.0.0"
	},
	"require-dev": {
		"yiisoft/yii2-bootstrap": "~2.0.10",
		"yiisoft/yii2-bootstrap4": "~2.0.10",
		"phpunit/phpunit": "^9.5",
		"codeception/codeception": "^4.1",
		"codeception/module-asserts": "^1.3",
		"codeception/module-phpbrowser": "^1.0.0",
		"codeception/module-yii2": "dev-feature_disable_logger as 1.1.5",
		"codeception/module-filesystem": "^1.0",
		"codeception/module-rest": "^1.3.1",
		"vlucas/phpdotenv": "^5.4.1"
	},
	"autoload": {
		"psr-4": {
			"cusodede\\opentracing\\": "src"
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		},
		{
			"type": "vcs",
			"url": "https://github.com/cusodede/module-yii2"
		}
	],
	"config": {
		"allow-plugins": {
			"yiisoft/yii2-composer": true
		}
	}
}
